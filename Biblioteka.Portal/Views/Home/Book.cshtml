@{
ViewData["Title"] = "Książka";
}

<div class="container mt-5">
    <form asp-action="@ViewData["Action"]" asp-controller="Books" method="post">
        @if(ViewData["Id"] != null){
        <input type="hidden" name="Id" value="@ViewData["Id"]">
        }
        <div class="form-group">
            <input type="text" class="form-control" id="Title" name="Title" placeholder="Tytuł" value="@ViewData["BookTitle"]">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="Author" name="Author" placeholder="Autor" value="@ViewData["Author"]">
        </div>
        <div class="form-group">
            <input type="date" class="form-control" id="PublishingDate" name="PublishingDate" placeholder="Data wydania" value="@ViewData["Date"]">
        </div>
        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Error"]
            </div>
        }
        <div class="form-group">
            <button class="btn btn-success" type="submit">@ViewData["ActionText"]</button>
        </div>
    </form>
</div>
